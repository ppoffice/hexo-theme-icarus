{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/widget/adsense.json",
    "description": "Google AdSense unit configurations",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "const": "adsense"
        },
        "client_id": {
            "type": "string",
            "description": "AdSense client ID"
        },
        "slot_id": {
            "type": "string",
            "description": "AdSense AD unit ID"
        }
    },
    "required": [
        "type",
        "client_id",
        "slot_id"
    ]
}
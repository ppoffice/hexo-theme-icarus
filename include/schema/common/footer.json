{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/common/footer.json",
    "description": "Page footer configurations",
    "type": "object",
    "properties": {
        "copyright": {
            "description": "Copyright text",
            "type": "string",
            "examples": [
                "© 2019",
                "© 2019 - 2020",
                "© 2019 - 2020, Company Name",
                "© 2019 - 2020, Company Name. All rights reserved.",
                "粤ICP备12345678号"
            ]
        },
        "ICPRecord":{
            "description": "ICP备案",
            "type":"string",
            "examples": [
                "粤ICP备12345678号"
            ]
        },
        "policeregion":{
            "description": "公安备案区域",
            "type":"string",
            "examples": [
                "粤"
            ]
        },
        "policerecord":{
            "description": "公安备案号码",
            "type":"string",
            "examples": [
                "12345678912345"
            ]
        },
        "links": {
            "$ref": "/misc/poly_links.json",
            "description": "Links to be shown on the right of the footer section",
            "examples": [
                {
                    "Creative Commons": {
                        "icon": "fab fa-creative-commons",
                        "url": "https://creativecommons.org/"
                    },
                    "Attribution 4.0 International": {
                        "icon": "fab fa-creative-commons-by",
                        "url": "https://creativecommons.org/licenses/by/4.0/"
                    },
                    "Download on GitHub": {
                        "icon": "fab fa-github",
                        "url": "https://github.com/ppoffice/hexo-theme-icarus"
                    }
                }
            ]
        }
    }
}